{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "scripts",
    "target": "ES2017",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  
  "ts-node": {
    "esm": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "scripts", "dist"]
}
